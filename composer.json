{
    "name": "bulton-fr/dependency-tree",
    "type": "library",
    "description": "Lib to generate a tree of dependencies with PHP",
    "keywords": [
        "dependency tree",
        "php"
    ],
    "homepage": "https://github.com/bulton-fr/dependency-tree",
    "time": "2016-06-19",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Vermeulen Maxime / Bulton",
            "homepage": "http://www.bulton.fr",
            "email": "bulton.fr@gmail.com"
        }
    ],
    "support": {
        "email": "support@bulton.fr",
        "issues": "https://github.com/bulton-fr/dependency-tree/issues",
        "source": "https://github.com/bulton-fr/dependency-tree"
    },
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "atoum/atoum": "~3.1|^4.0",
        "atoum/visibility-extension": "~1.3|^2.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13"
    },
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "atoum/atoum-extension-installer": true
        },
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "apcu-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "bultonFr\\DependencyTree\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "bultonFr\\DependencyTree\\test\\unit\\mocks\\": "test/unit/mocks"
        }
    },
    "scripts": {
        "test": "atoum -c .atoum.php +verbose",
        "check": "composer validate --strict",
        "cs-check": "phpcs --standard=PSR12 src/",
        "analyze": "phpstan analyse --memory-limit=1G",
        "phpmd": "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode",
        "quality": [
            "@check",
            "@test",
            "@cs-check",
            "@analyze"
        ]
    }
}
